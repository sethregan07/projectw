# Production Environment Variables for Multi-VPS Deployment
# Copy this file to .env.prod and fill in your database VPS IP and credentials

# Database Configuration (for separate database VPS)
DB_HOST=your-database-vps-ip
DB_PORT=5432

# Authentication Service Database
DB_NAME=auth
DB_USER=auth_user
DB_PASSWORD=your-secure-auth-password

# Ghost Service Database
# (Use different user for each service)
GHOST_DB_USER=ghost_user
GHOST_DB_PASSWORD=your-secure-ghost-password

# Mautic Service Database
MAUTIC_DB_USER=mautic_user
MAUTIC_DB_PASSWORD=your-secure-mautic-password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars
JWT_EXPIRY=24h

# Social Auth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://your-domain.com/api/auth/google/callback

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=https://your-domain.com/api/auth/github/callback

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://your-domain.com/api
NEXT_PUBLIC_DOMAIN=your-domain.com

# Node Environment
NODE_ENV=production

# Monitoring (optional)
PROMETHEUS_ENABLED=true
METRICS_PORT=9091

# Backup Configuration
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=7
